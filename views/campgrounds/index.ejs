<% layout('./layouts/boilerplate') %>

    <div id="clusterMap">

    </div>

    <h1>All campgrounds</h1>
    <a href="/campgrounds/new">Add a new campground</a>

    <% for(let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src=" <%=campground.images[0].url %>  " alt="img :(" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <small class="text-muted">
                            <%= campground.location %>
                        </small>
                        <br>
                        <small class="text-muted">
                            <%= campground.price %>
                        </small>
                        <br>
                        <a class="btn btn-primary " href="/campgrounds/<%=campground._id%>">View
                            <%=campground.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>


            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const campgrounds = { features: <%-JSON.stringify(campgrounds) %>};
            </script>

            <script src="/javascripts/clusterMap.js"></script>